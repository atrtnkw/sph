# argv: time
BEGIN{
    m0 = m1 = 0.;
    x0[0] = x0[1] = x0[2] = 0.;
    x1[0] = x1[1] = x1[2] = 0.;
}
{
    if($2 == 0) {
        m0    += $3;
        x0[0] += $3 * $4;
        x0[1] += $3 * $5;
        x0[2] += $3 * $6;
    } else {
        m1    += $3;
        x1[0] += $3 * $4;
        x1[1] += $3 * $5;
        x1[2] += $3 * $6;
    }
}
END{
    m0inv = 1. / m0;
    m1inv = 1. / m1;
    for(k = 0; k < 3; k++) {
        x0[k] *= m0inv;
        x1[k] *= m1inv;
    }
    r = sqrt((x0[0] - x1[0])**2 + (x0[1] - x1[1])**2 + (x0[2] - x1[2])**2);
    printf("%5d %+e", time, r);
    printf(" %+e %+e %+e", x0[0], x0[1], x0[2]);
    printf(" %+e %+e %+e", x1[0], x1[1], x1[2]);
    printf("\n");
}

